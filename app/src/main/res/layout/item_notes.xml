<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/Black__"
        android:layout_margin="10dp">
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_shape"
            android:id="@+id/view_priority"
            android:layout_margin="10dp"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card"

                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/view_title"
                android:maxLines="1"
                android:textSize="16sp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdfghjsdfghjhjsdfghsdfghjbhnrctfvgbhnjxcvgbhnjghnjxgbhnjcfvgbhvggbhnjvgbhnnbngiynciugwrnywtciytyxtiuriuytoithrkjxhr"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:id="@+id/view_subtitle"
                android:layout_marginTop="5dp"

                android:textSize="14sp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01 janauary"
                android:id="@+id/view_date"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:textSize="16sp"

                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>